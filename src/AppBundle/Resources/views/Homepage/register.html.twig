    <section id="portfolio" class="fill">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>{{'menu.register'|trans}}</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="container">
			<div class="row main">
				<div class="main-login main-center">
                    {{ form_start(form, {'action' : path('fos_user_registration_register') }) }}
						<div class="form-group">
							<label for="username" class="cols-sm-2 control-label">{{form.username.vars.label|trans({},'FOSUserBundle')}}</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
                                    {{ form_widget(form.username, {'attr' : { 'placeholder' : 'register.placeholders.username'|trans } }) }}
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="email" class="cols-sm-2 control-label">{{form.email.vars.label|trans({},'FOSUserBundle')}}</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                                    {{ form_widget(form.email, {'attr' : { 'placeholder' : 'register.placeholders.email'|trans } }) }}
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="password" class="cols-sm-2 control-label">{{form.plainPassword.children.first.vars.label|trans({},'FOSUserBundle')}}</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                                    {{ form_widget(form.plainPassword.children.first, {'attr' : { 'placeholder' : 'register.placeholders.password'|trans } }) }}
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="confirm" class="cols-sm-2 control-label">{{form.plainPassword.children.second.vars.label|trans({},'FOSUserBundle')}}</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                                    {{ form_widget(form.plainPassword.children.second, {'attr' : { 'placeholder' : 'register.placeholders.repeatPassword'|trans } }) }}
								</div>
							</div>
						</div>

                    {{ form_widget(form) }}
						<div class="form-group ">
							<button type="submit" class="btn btn-primary btn-lg btn-block login-button">{{'register.register'|trans}}</button>
						</div>
                    {{ form_end(form) }}
				</div>
			</div>
		</div>
        </div>
    </section>
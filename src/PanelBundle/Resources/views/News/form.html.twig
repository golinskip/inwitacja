    <div class="row">
        {{ form_start(form) }}
        {% if form.vars.value.published == false %}
            <button type="submit" id="news_form_submit_and_publish" class="btn btn-success btn-lg">
                {{'news.create.form.submitAndPublish'|trans}}
            </button>
        {% endif %}
        <button type="submit" id="news_form_submit" class="btn btn-primary btn-lg">
            <i class="fa fa-floppy-o"></i> {{'news.create.form.submit'|trans}}
        </button>

        <hr/>
        
        <div class="form-group">
            {{ form_label(form.title) }}
            {{ form_widget(form.title) }}
            {{ form_errors(form.title) }}
        </div>
        <div class="form-group">
            {{ form_label(form.urlName) }}
            <div class="input-group">
                <span class="input-group-addon">{{path('invitation_news', {
                        'newsSlug' : 'newsSlug',
                        'slug': Event.urlName
                })|replace({'newsSlug' : ''})}}</span>
                {{form_widget(form.urlName)}}
            </div>
            {{ form_errors(form.urlName) }}
        </div>
        
        {{ form_widget(form) }}
        
        {{ form_end(form) }}
    </div>
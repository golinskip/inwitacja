{{ form_start(form) }}
<div class='row'>
    <button type="submit" class="btn btn-primary btn-lg right">
        <i class="fa fa-floppy-o"></i> {{'invitationEditor.form.save'|trans}}
    </button>
    <hr/>
</div>
<div class="form-group">
    {{ form_label(form.name) }}
    {{ form_widget(form.name) }}
    {{ form_errors(form.name) }}
</div>
<div class="form-group">
    {{ form_label(form.phone) }}
    {{ form_widget(form.phone) }}
    {{ form_errors(form.phone) }}
</div>
<div class="form-group">
    {{ form_label(form.email) }}
    {{ form_widget(form.email) }}
    {{ form_errors(form.email) }}
</div>
<div class="form-group">
    {{ form_label(form.invitationGroup) }}
    {{ form_widget(form.invitationGroup) }}
    {{ form_errors(form.invitationGroup) }}
</div>
<div class='row'>
    <hr/>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    <span class='required'>{{'invitationEditor.form.person.name'|trans}}</span>
                </th>
                <th>
                    {{'invitationEditor.form.person.personGroup'|trans}}
                </th>
            </tr>
        </thead>
        <tbody id="invitationEditorPersonTable" data-prototype="{% filter escape %}{% include 'PanelBundle:InvitationEditor:form/person.html.twig' with {'form': form.children.person.vars.prototype} %}{% endfilter %}">
            {% for person in form.children.person.children %}
                {% include 'PanelBundle:InvitationEditor:form/person.html.twig' with {'form': person} %}
            {% endfor %}
        </tbody>
    </table>
    {{ form_widget(form.person) }}
     <a id="invitationEditorAddPerson" href="#">
        <i class="fa fa-plus"></i> Dodaj osobÄ™
    </a>
</div>
{{ form_end(form) }}
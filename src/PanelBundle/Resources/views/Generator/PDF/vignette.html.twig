{% extends 'PanelBundle:Generator:PDF/base.html.twig' %}

{% block styles %}
    body {
        font-family: sans-serif;
    }
    .vignette {
        float:left;
    }
    .vig-top{
        width: 320px;
        height: 100px;
        margin: 0;
        border:#000 1px dashed;
        {% if data.flexure %}
            border-bottom:#000 1px dotted;
        {% else %}
            border-bottom:0;
        {% endif %}
    }
    .vig-bottom{
        width: 320px;
        height: 70px;
        padding-top:30px;
        margin: 0;
        border:#000 1px dashed;
        border-top:0;
        text-align:center;
        font-size: 20px;
    }
    
{% endblock %}
    
{% block body %}
    {% for Invitation in Event.invitation %}
        {% for Person in Invitation.person %}
            <div class="vignette">
                <div class="vig-top"></div>
                <div class="vig-bottom">{{Person.name}}</div>
            </div>
        {% endfor %}
    {% endfor %}
{% endblock %}
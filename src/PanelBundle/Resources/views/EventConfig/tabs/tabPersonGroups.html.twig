    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    <span class='required'>{{'eventConfig.form.personGroup.name'|trans}}</span>
                </th>
                <th>
                    <span class='required'>{{'eventConfig.form.personGroup.price'|trans}}</span>
                </th>
            </tr>
        </thead>
        <tbody id="eventConfig-personGroupsTable" class="eventConfig-editableTable tbody-sortable" data-prototype="{% filter escape %}{% include 'PanelBundle:EventConfig:tabs/rowPersonGroup.html.twig' with {'form': form.vars.prototype, 'prototype':true} %}{% endfilter %}">
            {% for personGroup in form.children %}
                {% include 'PanelBundle:EventConfig:tabs/rowPersonGroup.html.twig' with {'form': personGroup} %}
            {% endfor %}
        </tbody>
    </table>
    {{ form_widget(form) }}
    <a id="eventConfig-addPersonGroup" class="eventConfig-addRow" data-table="eventConfig-personGroupsTable" href="#">
        <i class="fa fa-plus"></i> {{'eventConfig.form.personGroup.addGroup'|trans}}
    </a>
        <table id="invitationsTable" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>{{"invitationsManager.table.name"|trans}}</th>
                    <th></th>
                </tr>
            </thead>
            {% for Invitation in pagination %}
                <tr class="tr-clickable" data-href="">
                    <td class="col-md-9">{{Invitation.name}}<br/><small>(kod: {{Invitation.code}})</small></td>
                    <td class="col-md-3">
                        <a href="{{path('panel_invitations_manager_invitation', 
                            {'slug': Event.urlName, 'invitation':Invitation.id})
                            }}" class="btn btn-primary btn-sm" role="button">
                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            {{"invitationsManager.table.buttons.edit"|trans}}
                        </a>
                        <a href="#" class="btn btn-success btn-sm" role="button">
                            {{"invitationsManager.table.buttons.show"|trans}}
                            <i class="fa fa-chevron-circle-right" aria-hidden="true"></i>
                        </a>
                        <a class="text-danger pull-right remove clickable" href="{{path('panel_invitations_manager_remove_invitation', 
                            {'slug': Event.urlName, 'invitation':Invitation.id})
                            }}">
                            <i class="fa fa-times" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
